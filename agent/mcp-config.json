{
  "mcpServers": {
    "aws-iam": {
      "command": "python",
      "args": ["-m", "awslabs.iam_mcp_server.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-cloudtrail": {
      "command": "python",
      "args": ["-m", "awslabs.cloudtrail_mcp_server.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-api": {
      "command": "python",
      "args": ["-m", "awslabs.aws_api_mcp_server.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default",
        "READ_OPERATIONS_ONLY": "true"
      }
    }
  }
}