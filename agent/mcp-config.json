{
  "mcpServers": {
    "aws-iam": {
      "command": "uvx",
      "args": ["awslabs-iam-mcp-server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-cloudtrail": {
      "command": "uvx",
      "args": ["awslabs-cloudtrail-mcp-server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-api": {
      "command": "npx",
      "args": ["-y", "@aws-mcp/server-aws-api"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    }
  }
}