{
  "mcpServers": {
    "aws-iam": {
      "command": "python",
      "args": ["-m", "awslabs.iam_mcp_server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-cloudtrail": {
      "command": "python",
      "args": ["-m", "awslabs.cloudtrail_mcp_server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    },
    "aws-api": {
      "command": "npx",
      "args": ["-y", "@aws-mcp/server-aws-api"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_PROFILE": "default"
      }
    }
  }
}